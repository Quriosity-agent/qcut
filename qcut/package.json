{
  "name": "qcut",
  "version": "0.3.62",
  "description": "QCut - Open-source video editor",
  "author": {
    "name": "QCut Team",
    "email": "support@qcut.app"
  },
  "homepage": "https://github.com/donghaozhang/qcut",
  "main": "dist/electron/main.js",
  "packageManager": "bun@1.2.18",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@emnapi/core": "^1.4.5",
    "@emnapi/wasi-threads": "^1.1.0",
    "@playwright/test": "^1.40.0",
    "@types/electron-builder": "^2.8.2",
    "@types/jsdom": "^21.1.7",
    "@types/jszip": "^3.4.1",
    "@types/node": "^24.3.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/sharp": "^0.32.0",
    "@types/to-ico": "^1.1.3",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-packager": "^17.1.2",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "patch-package": "^8.0.1",
    "playwright": "^1.40.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "to-ico": "^1.1.5",
    "turbo": "^2.8.0",
    "typescript": "^5.9.2",
    "ultracite": "5.0.48"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build && bun run build:electron",
    "check-types": "turbo run check-types",
    "postinstall": "bun run setup-ffmpeg && bun scripts/patch-node-pty.ts",
    "build:electron": "cd electron && bun x tsc",
    "build:electron:watch": "cd electron && bun x tsc --watch",
    "lint": "npx ultracite@latest lint",
    "lint:clean": "npx @biomejs/biome check --skip-parse-errors .",
    "format": "npx ultracite@latest format",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win -c.win.forceCodeSigning=false",
    "dist:dir": "electron-builder --dir",
    "dist:win:unsigned": "electron-builder --win --config.win.forceCodeSigning=false --config.win.verifyUpdateCodeSignature=false && bun run verify:packaged-ffmpeg",
    "dist:win:release": "electron-builder --win --config.win.forceCodeSigning=false --config.win.verifyUpdateCodeSignature=false && bun run verify:packaged-ffmpeg",
    "dist:win:fast": "electron-builder --win --config.win.forceCodeSigning=false --config.compression=store --config.nsis.differentialPackage=false",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --win --mac --linux",
    "package:win": "electron-packager . QCut --platform=win32 --arch=x64 --out=dist-packager-new --overwrite --ignore=\"dist-packager.*\" --ignore=\"dist-electron.*\"",
    "copy-ffmpeg": "bun scripts/copy-ffmpeg.ts",
    "verify:packaged-ffmpeg": "bun scripts/verify-packaged-ffmpeg.ts",
    "setup-ffmpeg": "bun scripts/setup-ffmpeg.ts",
    "predev": "bun run setup-ffmpeg",
    "prebuild": "bun run setup-ffmpeg && bun run sync-skills",
    "sync-skills": "bun scripts/sync-skills.ts",
    "build:exe": "bun run build && bun run package:win && bun run copy-ffmpeg",
    "release:patch": "bun scripts/release.ts patch",
    "release:minor": "bun scripts/release.ts minor",
    "release:major": "bun scripts/release.ts major",
    "release:alpha": "bun scripts/release.ts alpha",
    "release:beta": "bun scripts/release.ts beta",
    "release:rc": "bun scripts/release.ts rc",
    "release:promote": "bun scripts/release.ts promote",
    "test": "cd apps/web && bunx vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:workflow": "playwright test project-workflow"
  },
  "build": {
    "appId": "com.qcut.videoeditor",
    "productName": "QCut AI Video Editor",
    "copyright": "Copyright Â© 2024 QCut Team",
    "afterPack": "./dist/scripts/afterPack.js",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "publish": {
      "provider": "github",
      "owner": "donghaozhang",
      "repo": "qcut",
      "private": false,
      "releaseType": "release"
    },
    "generateUpdatesFilesForAllChannels": true,
    "files": [
      "package.json",
      {
        "from": "dist/electron",
        "to": "electron",
        "filter": [
          "**/*"
        ]
      },
      "apps/web/dist/**/*",
      "node_modules/electron-log/**/*",
      "node_modules/electron-updater/**/*",
      "node_modules/@google/generative-ai/**/*",
      "node_modules/node-pty/**/*",
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/dist-packager/**/*",
      "!**/dist-packager-*/**/*",
      "!**/electron-builds/**/*",
      "!**/docs/**/*",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/coverage/**/*",
      "!**/.turbo/**/*",
      "!**/.next/**/*",
      "!**/packages/**/*",
      "!**/apps/landing/**/*"
    ],
    "compression": "maximum",
    "npmRebuild": true,
    "nodeGypRebuild": false,
    "extraResources": [
      {
        "from": "resources/default-skills",
        "to": "default-skills",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@google/generative-ai",
        "to": "node_modules/@google/generative-ai"
      },
      {
        "from": "node_modules/node-pty",
        "to": "node_modules/node-pty"
      },
      {
        "from": "node_modules/ffmpeg-static",
        "to": "node_modules/ffmpeg-static"
      },
      {
        "from": "node_modules/ffprobe-static",
        "to": "node_modules/ffprobe-static"
      },
      {
        "from": "docs/releases",
        "to": "docs/releases",
        "filter": [
          "**/*.md"
        ]
      },
      {
        "from": "CHANGELOG.md",
        "to": "CHANGELOG.md"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@ffmpeg/**/*",
      "**/node_modules/ffmpeg-static/**/*",
      "**/node_modules/ffprobe-static/**/*",
      "**/node_modules/electron-updater/**/*",
      "**/node_modules/electron-log/**/*",
      "**/node_modules/@google/generative-ai/**/*",
      "**/node_modules/node-pty/**/*",
      "**/electron/resources/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "compression": "store"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QCut AI Video Editor",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": "Video",
      "perMachine": false,
      "allowElevation": true,
      "displayLanguageSelector": false,
      "installerSidebar": "build/icon.ico",
      "uninstallerSidebar": "build/icon.ico",
      "license": false,
      "warningsAsErrors": false,
      "packElevateHelper": true,
      "differentialPackage": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "guid": "0fa53e31-8a77-5f52-ad1c-f9c8705b5d38"
    },
    "mac": {
      "category": "public.app-category.video",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Video",
      "maintainer": "QCut Team <support@qcut.app>",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "desktop": {
        "entry": {
          "Name": "QCut AI Video Editor",
          "Comment": "Open-source AI video editor",
          "Categories": "AudioVideo;Video;AudioVideoEditing"
        }
      }
    },
    "protocols": [
      {
        "name": "qcut-protocol",
        "schemes": [
          "qcut"
        ]
      }
    ],
    "fileAssociations": [
      {
        "ext": "qcut",
        "name": "QCut Project",
        "description": "QCut Project File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "mp4",
        "name": "MP4 Video",
        "description": "MPEG-4 Video File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "avi",
        "name": "AVI Video",
        "description": "AVI Video File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "mov",
        "name": "QuickTime Video",
        "description": "QuickTime Movie File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "mkv",
        "name": "Matroska Video",
        "description": "Matroska Video File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "webm",
        "name": "WebM Video",
        "description": "WebM Video File",
        "icon": "build/icon.ico"
      }
    ]
  },
  "dependencies": {
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@google/generative-ai": "^0.24.1",
    "@remotion/player": "4.0.417",
    "@remotion/renderer": "4.0.417",
    "@remotion/transitions": "4.0.417",
    "@remotion/zod-types": "4.0.417",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "jszip": "^3.10.1",
    "next": "^15.5.2",
    "node-pty": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remotion": "4.0.417",
    "wavesurfer.js": "^7.10.1"
  },
  "resolutions": {
    "minimist": "^1.2.8",
    "tough-cookie": "^4.1.4",
    "form-data": "^4.0.1",
    "jpeg-js": "^0.4.4",
    "tmp": "^0.2.4",
    "esbuild": "^0.25.8",
    "@types/node": "^24.3.1",
    "remotion": "4.0.417",
    "@remotion/player": "4.0.417",
    "@remotion/renderer": "4.0.417",
    "@remotion/transitions": "4.0.417",
    "@remotion/zod-types": "4.0.417"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "electron",
    "electron-winstaller",
    "esbuild",
    "ffmpeg-static",
    "ffprobe-static",
    "sharp"
  ]
}
