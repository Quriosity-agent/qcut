{
	"name": "qcut",
	"version": "2026.02.25.2",
	"description": "QCut - Open-source video editor",
	"author": {
		"name": "QCut Team",
		"email": "support@qcut.app"
	},
	"homepage": "https://github.com/Quriosity-agent/qcut",
	"main": "dist/electron/main.js",
	"bin": {
		"qcut-pipeline": "dist/electron/native-pipeline/cli.js"
	},
	"packageManager": "bun@1.2.18",
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@emnapi/core": "^1.4.5",
		"@emnapi/wasi-threads": "^1.1.0",
		"@playwright/test": "^1.58.2",
		"@remotion/bundler": "^4.0.428",
		"@remotion/cli": "^4.0.428",
		"@types/babel__traverse": "^7.28.0",
		"@types/electron-builder": "^2.8.2",
		"@types/js-yaml": "^4.0.9",
		"@types/jsdom": "^21.1.7",
		"@types/jszip": "^3.4.1",
		"@types/node": "^24.10.13",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/sharp": "^0.32.0",
		"@types/to-ico": "^1.1.3",
		"cross-env": "^10.1.0",
		"electron": "^40.6.0",
		"electron-builder": "^26.8.1",
		"electron-devtools-installer": "^4.0.0",
		"electron-packager": "^17.1.2",
		"esbuild": "^0.25.12",
		"ffmpeg-ffprobe-static": "^6.1.2-rc.1",
		"ffmpeg-static": "^5.3.0",
		"ffprobe-static": "^3.1.0",
		"happy-dom": "^20.6.3",
		"husky": "^9.1.7",
		"jsdom": "^28.1.0",
		"madge": "^8.0.0",
		"patch-package": "^8.0.1",
		"playwright": "^1.58.2",
		"rollup-plugin-visualizer": "^6.0.5",
		"to-ico": "^1.1.5",
		"turbo": "^2.8.10",
		"typescript": "^5.9.3",
		"ultracite": "^7.0.0"
	},
	"workspaces": [
		"apps/*",
		"packages/auth",
		"packages/db"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build && bun run build:electron",
		"check-types": "turbo run check-types",
		"postinstall": "bun run setup-ffmpeg && bun scripts/patch-node-pty.ts",
		"build:electron": "cd electron && bun x tsc && bun x esbuild ../electron/preload.ts --bundle --platform=node --outfile=../dist/electron/preload.js --external:electron",
		"build:electron:watch": "cd electron && bun x tsc --watch",
		"lint": "npx ultracite@latest lint",
		"lint:clean": "npx @biomejs/biome check --skip-parse-errors .",
		"format": "npx ultracite@latest format",
		"electron": "electron .",
		"electron:dev": "cross-env NODE_ENV=development electron .",
		"dist": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --publish never",
		"dist:win": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --win --publish never -c.win.forceCodeSigning=false",
		"dist:dir": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --dir --publish never",
		"dist:win:unsigned": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --win --publish never --config.win.forceCodeSigning=false --config.win.verifyUpdateCodeSignature=false && bun run verify:packaged-ffmpeg && bun run verify:packaged-aicp",
		"compile-afterpack": "mkdir -p dist/scripts && bun build scripts/afterPack.ts --outfile=dist/scripts/afterPack.js --target=node --format=cjs",
		"dist:win:release": "bun run compile-afterpack && bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --win --publish never --config.win.forceCodeSigning=false --config.win.verifyUpdateCodeSignature=false && bun run verify:packaged-ffmpeg && bun run verify:packaged-aicp",
		"dist:win:fast": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --win --publish never --config.win.forceCodeSigning=false --config.compression=store --config.nsis.differentialPackage=false",
		"dist:mac": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --mac --publish never && bun run verify:packaged-ffmpeg && bun run verify:packaged-aicp",
		"dist:linux": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --linux --publish never && bun run verify:packaged-ffmpeg && bun run verify:packaged-aicp",
		"dist:all": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries && electron-builder --win --mac --linux --publish never",
		"package:win": "electron-packager . QCut --platform=win32 --arch=x64 --out=dist-packager-new --overwrite --ignore=\"dist-packager.*\" --ignore=\"dist-electron.*\"",
		"copy-ffmpeg": "bun scripts/copy-ffmpeg.ts",
		"verify:packaged-ffmpeg": "bun scripts/verify-packaged-ffmpeg.ts",
		"verify:packaged-aicp": "bun scripts/verify-packaged-aicp.ts",
		"setup-ffmpeg": "bun scripts/setup-ffmpeg.ts",
		"stage-ffmpeg-binaries": "bun scripts/stage-ffmpeg-binaries.ts",
		"stage-aicp-binaries": "bun scripts/stage-aicp-binaries.ts",
		"stage:all-binaries": "bun run stage-ffmpeg-binaries && bun run stage-aicp-binaries",
		"aicp:install": "cd packages/video-agent-skill && pip install -e \".[dev]\"",
		"aicp:test": "cd packages/video-agent-skill && python -m pytest tests/ -x --tb=short",
		"pipeline": "bun run electron/native-pipeline/cli.ts",
		"aicp:list-models": "cd packages/video-agent-skill && python -m ai_content_pipeline list-models",
		"submodule:init": "git submodule update --init --recursive",
		"submodule:update": "git submodule update --remote --recursive",
		"ao:init": "cd packages/agent-orchestrator && bun install && bun run build",
		"ao:build": "cd packages/agent-orchestrator && bun run build",
		"ao:setup": "bun run submodule:init && bun run ao:init",
		"predev": "bun run setup-ffmpeg",
		"prebuild": "bun run setup-ffmpeg && bun run stage-ffmpeg-binaries && bun run sync-skills",
		"sync-skills": "bun scripts/sync-skills.ts",
		"build:exe": "bun run build && bun run package:win && bun run copy-ffmpeg",
		"release": "bun scripts/release.ts",
		"release:alpha": "bun scripts/release.ts alpha",
		"release:beta": "bun scripts/release.ts beta",
		"release:rc": "bun scripts/release.ts rc",
		"release:promote": "bun scripts/release.ts promote",
		"check:circular": "madge --circular --extensions ts,tsx apps/web/src electron/",
		"test": "cd apps/web && bunx vitest run",
		"test:e2e": "playwright test",
		"test:e2e:record": "bun scripts/run-e2e-record.ts",
		"test:e2e:combine": "bun scripts/combine-e2e-videos.ts",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:workflow": "playwright test project-workflow"
	},
	"build": {
		"appId": "com.qcut.videoeditor",
		"productName": "QCut AI Video Editor",
		"copyright": "Copyright Â© 2024 QCut Team",
		"afterPack": "./dist/scripts/afterPack.js",
		"directories": {
			"output": "dist-electron",
			"buildResources": "build"
		},
		"extraMetadata": {
			"main": "electron/main.js"
		},
		"publish": {
			"provider": "github",
			"owner": "Quriosity-agent",
			"repo": "qcut",
			"private": false,
			"releaseType": "release"
		},
		"generateUpdatesFilesForAllChannels": true,
		"files": [
			"package.json",
			{
				"from": "dist/electron",
				"to": "electron",
				"filter": [
					"**/*"
				]
			},
			"apps/web/dist/**/*",
			"node_modules/electron-log/**/*",
			"node_modules/electron-updater/**/*",
			"node_modules/@google/generative-ai/**/*",
			"node_modules/node-pty/**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
			"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
			"!**/node_modules/*.d.ts",
			"!**/node_modules/.bin",
			"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
			"!.editorconfig",
			"!**/._*",
			"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
			"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
			"!**/{appveyor.yml,.travis.yml,circle.yml}",
			"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
			"!**/dist-packager/**/*",
			"!**/dist-packager-*/**/*",
			"!**/electron-builds/**/*",
			"!**/docs/**/*",
			"!**/test/**/*",
			"!**/tests/**/*",
			"!**/coverage/**/*",
			"!**/.turbo/**/*",
			"!**/.next/**/*",
			"!**/packages/**/*",
			"!**/apps/landing/**/*"
		],
		"compression": "normal",
		"npmRebuild": false,
		"nodeGypRebuild": false,
		"extraResources": [
			{
				"from": "resources/default-skills",
				"to": "default-skills",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "electron/resources/ffmpeg",
				"to": "ffmpeg"
			},
			{
				"from": "electron/resources/bin",
				"to": "bin"
			},
			{
				"from": "docs/releases",
				"to": "docs/releases",
				"filter": [
					"**/*.md"
				]
			},
			{
				"from": "CHANGELOG.md",
				"to": "CHANGELOG.md"
			},
			{
				"from": "build/icon.png",
				"to": "icon.png"
			}
		],
		"asar": true,
		"asarUnpack": [
			"**/node_modules/sharp/**/*",
			"**/node_modules/node-pty/**/*",
			"**/electron/resources/**/*"
		],
		"win": {
			"target": "nsis",
			"icon": "build/icon.ico",
			"forceCodeSigning": false,
			"verifyUpdateCodeSignature": false,
			"signAndEditExecutable": false,
			"requestedExecutionLevel": "asInvoker",
			"artifactName": "${productName}-Setup-${version}.${ext}",
			"compression": "store"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "QCut AI Video Editor",
			"installerIcon": "build/icon.ico",
			"uninstallerIcon": "build/icon.ico",
			"installerHeaderIcon": "build/icon.ico",
			"deleteAppDataOnUninstall": true,
			"runAfterFinish": true,
			"menuCategory": "Video",
			"perMachine": false,
			"allowElevation": true,
			"displayLanguageSelector": false,
			"installerSidebar": "build/icon.ico",
			"uninstallerSidebar": "build/icon.ico",
			"license": false,
			"warningsAsErrors": false,
			"packElevateHelper": true,
			"differentialPackage": true,
			"artifactName": "${productName}-Setup-${version}.${ext}",
			"guid": "0fa53e31-8a77-5f52-ad1c-f9c8705b5d38"
		},
		"mac": {
			"category": "public.app-category.video",
			"icon": "build/icon.icns",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"arm64"
					]
				}
			],
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist"
		},
		"linux": {
			"icon": "build/icons",
			"category": "Video",
			"maintainer": "QCut Team <support@qcut.app>",
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				},
				{
					"target": "deb",
					"arch": [
						"x64"
					]
				}
			],
			"desktop": {
				"entry": {
					"Name": "QCut AI Video Editor",
					"Comment": "Open-source AI video editor",
					"Categories": "AudioVideo;Video;AudioVideoEditing"
				}
			}
		},
		"protocols": [
			{
				"name": "qcut-protocol",
				"schemes": [
					"qcut"
				]
			}
		],
		"fileAssociations": [
			{
				"ext": "qcut",
				"name": "QCut Project",
				"description": "QCut Project File",
				"icon": "build/icon.ico"
			},
			{
				"ext": "mp4",
				"name": "MP4 Video",
				"description": "MPEG-4 Video File",
				"icon": "build/icon.ico"
			},
			{
				"ext": "avi",
				"name": "AVI Video",
				"description": "AVI Video File",
				"icon": "build/icon.ico"
			},
			{
				"ext": "mov",
				"name": "QuickTime Video",
				"description": "QuickTime Movie File",
				"icon": "build/icon.ico"
			},
			{
				"ext": "mkv",
				"name": "Matroska Video",
				"description": "Matroska Video File",
				"icon": "build/icon.ico"
			},
			{
				"ext": "webm",
				"name": "WebM Video",
				"description": "WebM Video File",
				"icon": "build/icon.ico"
			}
		]
	},
	"dependencies": {
		"@ffmpeg/core": "^0.12.10",
		"@ffmpeg/ffmpeg": "^0.12.15",
		"@ffmpeg/util": "^0.12.2",
		"@google/generative-ai": "^0.24.1",
		"@modelcontextprotocol/sdk": "^1.26.0",
		"@remotion/player": "4.0.424",
		"@remotion/renderer": "4.0.424",
		"@remotion/transitions": "4.0.424",
		"@remotion/zod-types": "4.0.424",
		"electron-log": "^5.4.3",
		"electron-updater": "^6.8.3",
		"js-yaml": "^4.1.1",
		"jszip": "^3.10.1",
		"next": "^16.0.0",
		"node-pty": "^1.1.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"remotion": "4.0.424",
		"scheduler": "^0.27.0",
		"wavesurfer.js": "^7.12.1"
	},
	"resolutions": {
		"minimist": "^1.2.8",
		"tough-cookie": "^4.1.4",
		"form-data": "^4.0.1",
		"jpeg-js": "^0.4.4",
		"tmp": "^0.2.4",
		"esbuild": "^0.25.12",
		"@types/node": "^24.10.13",
		"remotion": "4.0.424",
		"@remotion/player": "4.0.424",
		"@remotion/renderer": "4.0.424",
		"@remotion/transitions": "4.0.424",
		"@remotion/zod-types": "4.0.424"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide",
		"electron",
		"electron-winstaller",
		"esbuild",
		"ffmpeg-static",
		"ffprobe-static",
		"sharp"
	]
}
